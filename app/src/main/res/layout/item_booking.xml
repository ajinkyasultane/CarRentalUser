<!-- res/layout/item_booking.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/bookingCarImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_car" />

        <TextView
            android:id="@+id/bookingCarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="8dp"/>

        <TextView
            android:id="@+id/bookingDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/05/2025 to 22/05/2025"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bookingLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup: Sillod"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bookingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="14sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
